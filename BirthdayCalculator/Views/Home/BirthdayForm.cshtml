@model BirthdayCalculator.Models.BirthdayResponse
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Birthday Form</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="/css/styles.css" />
    </head>

    <body>
        <h5 class="bg-primary text-white text-center m-2 p-2">Insert information</h5>
        <form asp-action="BirthdayForm" method="post" class="m-2">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Your name:</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <p></p>
            <h5>Insert your date of birth:</h5>
            <div class="form-group">
                <label asp-for="Day" class="form-label">Your day of birth:</label>
                <input asp-for="Day" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Month" class="form-label">Your month of birth:</label>
                <input asp-for="Month" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Year" class="form-label">Your year of birth:</label>
                <input asp-for="Year" class="form-control" />

            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit your birthday</button>
        </form>
    </body>
</html>